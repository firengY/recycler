<LinearLayout
    android:id="@+id/coordinator_newsfragment"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.androidpro.wangyinews.fragments.NewsFragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
   <android.support.design.widget.AppBarLayout
       android:layout_width="match_parent"
       app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
       android:id="@+id/appbar"
       android:layout_height="50dp">
      <android.support.design.widget.CollapsingToolbarLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:contentScrim="?colorPrimary"
          app:layout_scrollFlags="scroll|exitUntilCollapsed"
          >
         <ImageView
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:scaleType="centerCrop"
             android:src="@mipmap/news_bg_top"
             app:layout_collapseMode="parallax"/>
         <android.support.v7.widget.Toolbar
             android:layout_width="match_parent"
             android:layout_height="?actionBarSize"
             android:id="@+id/toolbar"
             app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
             app:layout_collapseMode="pin"
             />
      </android.support.design.widget.CollapsingToolbarLayout>
   </android.support.design.widget.AppBarLayout>
   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="30dp">
   <android.support.design.widget.TabLayout
       android:minHeight="10dp"
       android:padding="3dp"
       android:id="@+id/tablayout_newsmodul_newsfragment"
       app:tabTextColor="#000000"
       app:tabSelectedTextColor="#f00"
       app:tabMode="scrollable"
       app:tabBackground="@color/colorIndicatorBg"
       app:tabIndicatorColor="#f00"
       app:tabIndicatorHeight="2dp"
       android:layout_width="0dp"
       android:layout_weight="1"
       android:layout_height="match_parent"/>
      <ImageView

          android:id="@+id/focus_newsfragment"
          android:paddingRight="5dp"
          android:src="@mipmap/pulldown"
          android:layout_width="wrap_content"
          android:layout_height="match_parent" />
   </LinearLayout>
   <android.support.v4.view.ViewPager
       android:id="@+id/viewpager_newsmodul_newsfragment"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"
       />

</LinearLayout>

